@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "color:white; font-size: 16px;" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="hoverF" style="height:54px; padding-top:2px; border-radius:10px;">
                @Html.ActionLink("Admin On", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:white; font-size: 16px;" })
            </li>
            <li class="hoverF" style="height:54px; padding-top:2px; border-radius:10px;"><a href="javascript:document.getElementById('logoutForm').submit()" style = "color:white; font-size: 16px;">Log off</a></li>

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <!--<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li-->
        <li>
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "color:white; font-size: 16px;" })
        </li>
    </ul>
}