<div class="col-lg-12 text-center">
    <h1>Clients</h1>
</div>

<div class="col-lg-12 text-center">


    <div class="grid-container">
        <div class="grid-item">
            @Html.ActionLink("Statistics", "Statistics", null, new { @class = "btn btn-primary  btn-block" })
        </div>

        <div class="grid-item">@Html.ActionLink("Add New Client", "Create", null, new { @class = "btn btn-primary  btn-block" }) </div>

        <div class="grid-item">
            <div id="accordion">
                <div class="card">

                    <div class="card-header text-center">

                        <a class="collapsed card-link btn btn-primary  btn-block" data-toggle="collapse" href="#searchId">
                            Search By
                        </a>
                    </div>

                    <div id="searchId" class="collapse" data-parent="#accordion">
                        <div class="card-body">

                            <br />


                            <div>

                                <div class="text-center">

                                    @using (Html.BeginForm("Index", "Clients", FormMethod.Get))
                                    {
                                        @Html.RadioButton("searchBy", "Name", true, new { @class = "form-check-input" }) <text>Name</text>
                                        @Html.RadioButton("searchBy", "Rut", false, new { @class = "form-check-input" }) <text>Rut</text>
                                        @Html.RadioButton("searchBy", "Phone", false, new { @class = "form-check-input" }) <text>Phone</text> <br />
                                        @Html.TextBox("search", null, new { @class = "text-center" }) <br /> <input type="submit" value="Search" class="btn btn-success" style="margin-top:15px" />
                                    }

                                </div>

                            </div>




                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="grid-item">@Html.ActionLink("Generate Report", "ClientReport", null, new { @class = "btn btn-success  btn-block" }) </div>

        <br />

    </div>
</div>

