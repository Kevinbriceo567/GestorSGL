                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </th>
                <td style="width:30px">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rut)
                </td>
                <td>

                    @{
                        if (!String.IsNullOrEmpty(item.Observation))
                        {


                            <div id="accordion">
                                <div class="card">

                                    <div class="card-header text-center">

                                        <img src="~/img/expandIcon.png" style="height:20px" />

                                        <a class="collapsed card-link" data-toggle="collapse" href="#@Html.DisplayFor(modelItem => item.Rut)">
                                            Expand
                                        </a>
                                    </div>

                                    <div id="@Html.DisplayFor(modelItem => item.Rut)" class="collapse" data-parent="#accordion">
                                        <div class="card-body">



                                            <div>
                                                <hr />
                                                <dl class="">

                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.Observation)
                                                    </dt>

                                                    <dd>
                                                        @Html.DisplayFor(model => item.Observation)
                                                    </dd>

                                                </dl>
                                            </div>




                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {


                            <p class="text-center">Empty</p>


                        }
                    }

                    <!-- Observation Accordion -->

                </td>
                <td>

                    <img src="~/img/editIcon.png" style="height:20px" />
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |

                    <img src="~/img/detailIcon.png" style="height:20px" />
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |

                    <img src="~/img/deleteIcon.png" style="height:20px" />
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })

                </td>
            </tr>










        }

    </table>




</div>





















































