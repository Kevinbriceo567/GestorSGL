@model SGLClientBase.Models.Client

<h2>SGL</h2>

<img src="~/img/databaseBack.jpg" class="img-responsive" style="border-radius:0px" />

<div class="col-lg-12 text-center">
    <h2>Delete Client</h2>
</div>

<style>

    .form-horizontal {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 45%;
        /*border: 1px solid black;*/
    }

    .form-group {
        border: 1px solid red;
        width: 110%;
        margin-left: 20%;
        text-align: right;
    }

    .form-control {
        width: 100%;
        /*border: 1px solid blue;*/
    }

    .boxed {
        width: 100%;
    }

    .col-md-2 {
        /*border: 1px solid yellow;*/
        width: 100px;
        text-align: center
    }

    .control-label {
        /*border: 1px dotted violet;*/
    }
</style>

<div class="form-horizontal">
    <h3 style="text-align:center">Are you sure you want to delete this?</h3>
    <div>
        <hr />

        <div class="w3-panel" style="padding-left:1%; padding-right:1%;">
            <div class="w3-row-padding" style="margin:0 -16px">
                <div class="w3-large">
                    <table class="w3-table w3-striped w3-white">
                        <tr>
                            <td><i class="fa fa-hashtag w3-text-black w3-large"></i></td>
                            <td>ID</td>
                            <td><i>@Html.DisplayFor(model => model.ID)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-address-card w3-text-black w3-large"></i></td>
                            <td>Name</td>
                            <td><i>@Html.DisplayFor(model => model.Name)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-birthday-cake w3-text-black w3-large"></i></td>
                            <td>Birthday</td>
                            <td><i>@Html.DisplayFor(model => model.BirthDay)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-envelope-o w3-text-black w3-large"></i></td>
                            <td>Email Address</td>
                            <td><i>@Html.DisplayFor(model => model.EmailAddress)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-map-marker w3-text-black w3-large"></i></td>
                            <td>Direction</td>
                            <td><i>@Html.DisplayFor(model => model.Direction)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-sort-numeric-asc w3-text-black w3-large"></i></td>
                            <td>Rut</td>
                            <td><i>@Html.DisplayFor(model => model.Rut)</i></td>
                        </tr>
                        <tr>
                            <td><i class="fa fa-align-left w3-text-black w3-large"></i></td>
                            <td>Observation</td>
                            <td><i>@Html.DisplayFor(model => model.Observation)</i></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="col-lg-12 text-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>