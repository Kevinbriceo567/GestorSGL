<div class="col-lg-12 text-center">
    <h1>Products</h1>
</div>

<div class="col-lg-12 text-center">


    <div class="grid-container">
        <div class="grid-item">
            @Html.ActionLink("Statistics", "Statistics", null, new { @class = "btn btn-default  btn-block" })
        </div>

        <div class="grid-item">@Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-default  btn-block" }) </div>

        <div class="grid-item">
            <div id="accordion">
                <div class="card">

                    <div class="card-header text-center">

                        <a class="collapsed card-link btn btn-default  btn-block" data-toggle="collapse" href="#searchId">
                            Search By
                        </a>
                    </div>

                    <div id="searchId" class="collapse" data-parent="#accordion">
                        <div class="card-body">

                            <br />


                            <div>

                                <div class="text-center">

                                    @using (Html.BeginForm("Index", "ProductsNew", FormMethod.Get))
                                    {
                                        @Html.RadioButton("searchBy", "Name", true, new { @class = "form-check-input" }) <text>Name</text>
                                        @Html.RadioButton("searchBy", "Codename", false, new { @class = "form-check-input" }) <text>Codename</text><br />
                                        @Html.TextBox("search", null, new { @class = "text-center" }) <br /> <input type="submit" value="Search" class="btn btn-success" style="margin-top:15px" />
                                    }

                                </div>

                            </div>




                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="grid-item">@Html.ActionLink("Generate Report", "ClientReport", null, new { @class = "btn btn-success  btn-block" }) </div>

        <br />

    </div>
</div>

<div class="formStyle">


    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codename)
            </th>
            <th>
                Release Date
            </th>
            <th>
                Dollar Price
            </th>
            <th>
                Image
            </th>
            <th>
                Actions
            </th>
        </tr>


        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="8"><div class="col-lg-12 text-center" style="border-radius:0px"><h5>Without results</h5></div></td>
            </tr>
        }

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>

                    @{
                        if (!String.IsNullOrEmpty(item.Description))
                        {


                            <div id="accordion">
                                <div class="card">

                                    <div class="card-header text-center">

                                        <img src="~/img/expandIcon.png" style="height:20px" />

                                        <a class="collapsed card-link" data-toggle="collapse" href="#@Html.DisplayFor(modelItem => item.Name)">
                                            Expand
                                        </a>
                                    </div>

                                    <div id="@Html.DisplayFor(modelItem => item.Name)" class="collapse" data-parent="#accordion">
                                        <div class="card-body">



                                            <div>
                                                <hr />
                                                <dl class="">

                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.Description)
                                                    </dt>

                                                    <dd>
                                                        @Html.DisplayFor(model => item.Description)
                                                    </dd>

                                                </dl>
                                            </div>




                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                        else
                        {


                            <p class="text-center">Empty</p>


                        }
                    }

                    <!-- Observation Accordion -->

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Codename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DollarPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>


                <td>
                    <!--
                    <img src="~/img/editIcon.png" style="height:20px" />
                    <img src="~/img/detailIcon.png" style="height:20px" />
                    <img src="~/img/deleteIcon.png" style="height:20px" />
                    -->

                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-default" })

                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })

                </td>
            </tr>










        }

    </table>




</div>

