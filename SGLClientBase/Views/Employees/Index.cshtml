<div class="col-lg-12 text-center">
    <h1>Employees</h1>
</div>

<div class="col-lg-12 text-center">


    <div class="grid-container">
        <div class="grid-item darkButton">
            @Html.ActionLink("Statistics", "Statistics", "Employees", new { @class = "btn w3-dark-grey  btn-block" })
        </div>

        <div class="grid-item">@Html.ActionLink("Add New Employee", "Create", null, new { @class = "btn w3-dark-grey  btn-block" }) </div>

        <div class="grid-item">
            <div id="accordion">
                <div class="card">

                    <div class="card-header text-center">

                        <a class="collapsed card-link btn w3-dark-grey  btn-block" data-toggle="collapse" href="#searchId">
                            Search By
                        </a>
                    </div>

                    <div id="searchId" class="collapse" data-parent="#accordion">
                        <div class="card-body">

                            <br />


                            <div>

                                <div class="text-center">

                                    @using (Html.BeginForm("Index", "Employees", FormMethod.Get))
                                    {
                                        @Html.RadioButton("searchBy", "Email", true, new { @class = "form-check-input" }) <text>Email</text>
                                        @Html.RadioButton("searchBy", "Rut", false, new { @class = "form-check-input" }) <text>Rut</text>
                                        @Html.RadioButton("searchBy", "Phone", false, new { @class = "form-check-input" }) <text>Phone</text> <br />
                                        @Html.TextBox("search", null, new { @class = "text-center" }) <br /> <input type="submit" value="Search" class="btn btn-success" style="margin-top:15px" />
                                    }

                                </div>

                            </div>




                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="grid-item">@Html.ActionLink("Generate Report", "EmployeeReport", null, new { @class = "btn btn-success  btn-block" }) </div>

        <br />

    </div>
</div>

