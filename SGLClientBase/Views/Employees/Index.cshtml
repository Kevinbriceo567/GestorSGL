<style>

    .formStyle {
        border: 1px solid #707070;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .table {
        border-radius: 5px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto auto;
        background-color: white;
        padding: 1px;
        width: 100%
    }

    .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        border: 0px solid rgba(0, 0, 0, 0.8);
        padding: 5px;
        font-size: 15px;
        text-align: center;
    }
</style>

@{// ANALIZANDO DATOS
}



@{int yearsT = 0; }
@{int averageAge = 0;}


@foreach (var item in Model)
{

    DateTime Dob = item.BirthDay;

    int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
    int dob = int.Parse(Dob.ToString("yyyyMMdd"));
    int age = (now - dob) / 10000;

    yearsT += age;


}


@{
    if (Model.Count() != 0)
    {
        averageAge = yearsT / Model.Count();
    }

}



@{int emplo = 0;
    int sumSallary = 0;
    int promSallary = 0;
    int largeSallary = 0;

    List<int> deleteList = new List<int>();}


@foreach (var item in Model)
{

    ++emplo;

    sumSallary = sumSallary + Convert.ToInt32(item.DollarSalary);

    if (sumSallary != 0)
    {
        promSallary = sumSallary / Model.Count();
    }

    if (Convert.ToInt32(item.DollarSalary) >= 10000)
    {
        ++largeSallary;
    }



}



<!-- Stats -->

    <div class="w3-row-padding w3-center" style="margin:0 -16px; padding:16px; padding-top:0px;">

        <div class="w3-quarter w3-theme-l1" style="padding:12px; border-bottom-left-radius: 10px;">
            <p><i class="fa fa-user w3-xxlarge w3-text-light-grey"></i></p>
            <span class="w3-xxlarge">@emplo</span>
            <br>Number of Employees
        </div>
        <div class="w3-quarter w3-theme-l1" style="padding:12px;">
            <p><i class="fa fa-users w3-xxlarge w3-text-light-grey"></i></p>
            <span class="w3-xxlarge">@averageAge</span>
            <br>Average age
        </div>
        <div class="w3-quarter w3-theme-l1" style="padding:12px;">
            <p><i class="fa fa-money w3-xxlarge w3-text-light-grey"></i></p>
            <span class="w3-xxlarge">$@promSallary</span>
            <br>Average Sallary
        </div>
        <div class="w3-quarter w3-theme-l1" style="padding:12px; border-bottom-right-radius: 10px;">
            <p><i class="fa fa-bolt w3-xxlarge w3-text-light-grey"></i></p>
            <span class="w3-xxlarge">@largeSallary</span>
            <br>+$10000 Sallary
        </div>
    </div>



<br />


