<style>
    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        padding: 10px;
    }

    .grid-item {
        border: 1px solid white;
        padding: 20px;
        font-size: 1em;
        text-align: center;
    }

    .form-control {
        width: 250px;
        margin-left: 0px;
        /*border: 2px solid blue;*/
    }

    .control-label {
        text-align: left;
        width: 170px;
        /*border: 2px solid red;*/
    }

    .form-group {
        /*border: 2px solid green;*/
    }
</style>

<h2>SGL</h2>

<img src="~/img/databaseBack.jpg" class="img-responsive" style="border-radius:0px" />

<div class="col-lg-12 text-center">
    <h2>New Employee</h2>
    <hr />
</div>



<hr />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="grid-container" style="padding-left:70px;">

        <div class="grid-item">
            <div class="form-group">
                <label for="FirstName" class="control-label col-md-2"><i class="fa fa-address-card w3-text-black w3-large"></i> First Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="LastName" class="control-label col-md-2"><i class="fa fa-address-card-o w3-text-black w3-large"></i> Last Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="Rut" class="control-label col-md-2"><i class="fa fa-sort-numeric-asc w3-text-black w3-large"></i> Rut</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rut, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="BirthDay" class="control-label col-md-2"><i class="fa fa-birthday-cake w3-text-black w3-large"></i> BirthDay</label>
                <div class="col-md-10">


                    @{
                        string badString = @Html.DisplayFor(model => model.BirthDay).ToString();
                        DateTime badDate = DateTime.Parse(badString);
                        string goodDate = badDate.ToString("yyyy-MM-dd");
                    }

                    <input type="date" name="BirthDay" id="BirthDay" value="@goodDate" class="form-control" />


                    <!--@Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new { @class = "form-control" } })-->
                    @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="EmailCompany" class="control-label col-md-2"><i class="fa fa-envelope-o w3-text-black w3-large"></i> Company Email</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailCompany, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailCompany, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="PhoneNumber" class="control-label col-md-2"><i class="fa fa-phone w3-text-black w3-large"></i> Phone</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group ">
                <label for="DollarSalary" class="control-label col-md-2" style="text-align:left"><i class="fa fa-money w3-text-black w3-large"></i> Dollar Sallary</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DollarSalary, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DollarSalary, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="grid-item">
            <div class="form-group">
                <label for="Position" class="control-label col-md-2" style="text-align:left"><i class="fa fa-th w3-text-black w3-large"></i> Position</label>
                <div class="col-md-12">

                    <select class="form-control" id="Position" name="Position">
                        <option value="Web Designer">Web Designer</option>
                        <option value="Programmer">Programmer</option>
                        <option value="Data Scientists">Data Scientist</option>
                        <option value="Graphic Designer">Graphic Designer</option>
                        <option value="Network Technician">Network Technician</option>
                        <option value="Community Manager">Community Manager</option>
                        <option value="Intern">Intern</option>
                    </select>



                    <!--@Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })-->
                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


    </div>

    <div class="w3-center">
        <hr />

        <input type="submit" value="Save" class="btn btn-default w3-center" />

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default w3-center" })
        </div>
    </div>

}